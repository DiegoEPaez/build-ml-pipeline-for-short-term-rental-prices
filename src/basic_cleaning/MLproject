name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: The input artifact name (data) to be cleaned
        type: str

      output_artifact:
        description: The name of the cleaned data as an artifact
        type: str

      output_type:
        description: Type of the output for the artifact
        type: str

      output_description:
        description: Description of the dataset for the artifact
        type: str

      min_price:
        description: Minimum price to be used to filter outliers
        type: str

      max_price:
        description: Maximum price to be used to filter outliers
        type: str


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price} 
